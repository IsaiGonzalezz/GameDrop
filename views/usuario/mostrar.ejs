<%- include("../templates/encabezado.ejs") %>

<%- include("../templates/menu.ejs") %>

<div class="container">
    <div class="card mt-5">
        <div.card-header class="card-header">
            <h1>Usuarios</h1>
        </div.card-header>
 
        <div.card-body class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Password</th>
                        <th>Foto</th>
                        <th>Editar/Borrar</th>                      
                    </tr>
                </thead>
                <tbody>
                    <%
                users.forEach((usuario,i)=>{
                %>
                    <tr>
                        <td><%= i+1%></td>
                        <td><%= usuario.nombre%></td>
                        <td><%= usuario.usuario%></td>
                        <td><%= usuario.password%></td>
                        <td> <img src="/images/<%= usuario.foto%>" width="100px"></td> 
                        <td>
                            <a href="/editarUsuario/<%= usuario.id%>">Editar</a>
                            <a href="/borrarUsuario/<%= usuario.id%>">Borrar</a>
                        </td>

                    </tr>
                    <%
                });
                %>
                </tbody>
            </table>
        </div.card-body>
        <div.card-footer></div.card-footer>
    </div>
</div>

