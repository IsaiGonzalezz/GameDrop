<%- include ("../templates/encabezado") %>

<body>
    <div class="formulario">
        <h1>Iniciar Sesión</h1>
        <h2 id="mensaje"></h2>
        <form action="/login" method="post">
            <div class="username">
                <input type="text" id="usuario" placeholder="Usuario" name="usuario" required>
            </div>
            <div class="username">
                <input type="password" id="password" placeholder="Contraseña" name="password" required>
            </div>
            <input type="submit" value="Iniciar" name="iniciar">
            <div class="registro">
                <a href="/nuevoUsuario">Registrarme</a>
            </div>
        </form>
    </div>

</body>



<style>
    body {
    background: linear-gradient(150deg, #ff0044, #ffbb00) ;
    color: rgb(248, 91, 0);
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    height: 100vh;
}

.alerta_reg{
    color: rgb(255, 0, 0);
    text-align: center;
    
}

.formulario{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    background: rgb(255, 255, 255);
    border-radius: 10px;
}

.formulario h1{
    text-align: center;
    padding: 0 0 20px 0;
    border-bottom: 1px solid rgb(255, 204, 0);
}

.formulario form{
    padding: 0 40px;
    box-sizing: border-box;

}

form .username{
    position: relative;
    border-bottom: 2px solid rgb(255, 162, 0);
    margin: 30px 0;
}

.username input{
    width: 100%;
    padding: 0 5px;
    height: 40px;
    font-size: 16px;
    border: none;
    background: none;
    outline: none;

}

.username label{
    position: absolute;
    top: 50%;
    left: 5px;
    color:cadetblue;
    transform: translateY(-50%);
    font-size:  16px;
    pointer-events: none;
    transition: .3s;

}
.username span::before{
    content: "";
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    height: 2px;
    background: #ffb300;
    transition: 5s;
}

.username input:focus ~ label,
.username input:focus ~ label{
    top: -5px;
    color:#ff0000;
}

.username input:focus ~ span::before,
.username input:focus ~ span::before{
    width: 100%;

}

.recordar{
    margin: -5px 0 20px 5px;
    color: #4CA3D7;
    cursor: pointer;
}

.recordar :hover{
    text-decoration: underline;
}

input[type="submit"]{
    width: 100%;
    height: 50px;
    border: 1px solid;
    background: #f5b800;
    border-radius: 25px;
    font-size: 18px;
    color: rgb(255, 255, 255);
    cursor: pointer;
    outline: none;
}

input[type="submit"]:hover{
    border-color: #73b5e8;
    transition: .3s;
}

.registro{
    margin: 30px 0;
    text-align: center;
    font-size: 16px;
    color: #00325a;
}

.registro a{
    color: #317db7;
    text-decoration: none;
}

.registro a:hover{
    text-decoration: underline;
}

</style>